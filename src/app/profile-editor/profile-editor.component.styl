label
  font-size 14px
  font-weight 700
  margin-bottom 4px
  display block

input
  outline none
  width 500px
  height 42px
  border-radius 2px
  border 1px solid rgba(52, 53, 55, 0.2)
  box-shadow inset 0 3px 3px 0 rgba(243, 244, 246, 1)
  padding 0 10px
  font-size 14px
  color #51555A

input[type='submit']
  border none
  box-shadow none
  background #2f7681
  width 200px
  height 32px
  color white
  text-transform uppercase

input[ng-reflect-is-disabled='true']
  opacity 0.3

input.ng-touched.ng-invalid
  border solid red 1px

input.ng-touched.ng-valid
  border solid green 1px

.wrap
  height 90px

.alert-danger
  color red

.nav-item
  height 42px
  width 212px
  line-height 42px
  color #8A959B
  padding-left 10px
  text-decoration none
  list-style none
  float right
  &:hover
    background #F2F4F7
